<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
	
  <%= f.submit 'Create book' %>
<% end %>
<h1>Book detail</h1>
<div>
  <p><%= image_tag 'sample-author1.jpg' %></p>
   <p><%= @book.user.name %></p>
  <p><%= @book.title %></p>
  <p><%= @book.opinion %></p>
  <%= link_to "edit", edit_book_path(@book.id) %>
  <%= link_to "destroy", book_path(@book.id), method: :delete %>
</div>
