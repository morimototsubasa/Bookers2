<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
	
  <%= f.submit 'Create book' %>
<% end %>
<% @books.each do |book| %>
<div>
  <p><%= image_tag 'sample-author1.jpg' %></p>
  <p><%= book.title %></p>
  <p><%= book.opinion %></p>
<% end %>
</div>
