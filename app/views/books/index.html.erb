<h1>User info</h1>
<p><%= image_tag @user.get_profile_image(100, 100) %></p>
<p><%= @user.name %></p>
<p><%= @user.introduction %></p>
<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
	
  <%= f.submit 'Create book' %>
<% end %>
<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <p><%= image_tag @user.get_profile_image(100, 100) %></p>
  <p><%= book.title %></p>
  <p><%= book.opinion %></p>
<% end %>
</div>
