<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
	
  <%= f.submit 'Create book' %>
<% end %>

<h2>Users</h2>
<p>image</p>
<p>name</p>
<%=@users.each do |user| %>
<p><%= image_tag 'sample-author1.jpg' %></p>
<%= user.name %>
<%= link_to "show", user_path(user.id) %>
<% end %>
